@article{marblestone_2016,
title = {Toward an integration of deep learning and neuroscience.},
author = {Marblestone, Adam H and Wayne, Greg and Kording, Konrad P},
pages = {94},
url = {http://dx.doi.org/10.3389/fncom.2016.00094},
