@article{avenakoenigsberger_2014,
title = {Using Pareto optimality to explore the topology and dynamics of the human connectome.},
author = {Avena-Koenigsberger, Andrea and Goñi, Joaquín and Betzel, Richard F and van den Heuvel, Martijn P and Griffa, Alessandra and Hagmann, Patric and Thiran, Jean-Philippe and Sporns, Olaf},
