@article{mahadevan_2021,
title = {Evaluating the sensitivity of functional connectivity measures to motion artifact in resting-state {fMRI} data.},
author = {Mahadevan, Arun S and Tooley, Ursula A and Bertolero, Maxwell A and Mackey, Allyson P and Bassett, Danielle S},
