@article{serin_2021,
title = {{NBS}-Predict: A prediction-based extension of the network-based statistic.},
author = {Serin, Emin and Zalesky, Andrew and Matory, Adu and Walter, Henrik and Kruschwitz, Johann D},
pages = {118625},
url = {http://dx.doi.org/10.1016/j.neuroimage.2021.118625},
year = {2021},
