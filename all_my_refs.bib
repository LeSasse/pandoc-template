@article{jiang_2022,
title = {Neural alterations in opioid-exposed infants revealed by edge-centric brain functional networks.},
author = {Jiang, Weixiong and Merhar, Stephanie L and Zeng, Zhuohao and Zhu, Ziliang and Yin, Weiyan and Zhou, Zhen and Wang, Li and He, Lili and Vannest, Jennifer and Lin, Weili},
