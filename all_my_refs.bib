@article{dadi_2019,
title = {Benchmarking functional connectome-based predictive models for resting-state {fMRI}.},
author = {Dadi, Kamalaker and Rahim, Mehdi and Abraham, Alexandre and Chyzhyk, Darya and Milham, Michael and Thirion, Bertrand and Varoquaux, Gaël and Alzheimer's Disease Neuroimaging Initiative},
